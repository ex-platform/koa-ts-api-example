{
  "name": "koa-ts-api-example",
  "version": "0.0.1",
  "description": "REST API using KOA framework, typescript, TypeORM.",
  "author": "Aaron So",
  "license": "MIT",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*' -e ts --exec ts-node ./src/server.ts",
    "test": "jest"
  },
  "dependencies": {
    "@koa/router": "^10.1.1",
    "dotenv": "^10.0.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.3",
    "@types/koa__router": "^8.0.8",
    "@types/node": "^16.9.2",
    "jest": "^27.2.0",
    "nodemon": "^2.0.12",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/tests/**/*.+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
